---
import Title from "@components/Title.astro";
import Paragraph from "@components/Paragraph.astro";
import { getI18N } from "@i18n/index";
import BottlesImage from "@assets/images/bottles@2x.webp";
import { Image } from "astro:assets";
import Container from "@components/Container.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { body, subTitle, title } = i18n.ContentSection.bottomSection;
---

<Container extraClases="flex flex-wrap items-center">
  <div class="w-full sm:w-2/3 pr-4">
    <Title clases="text-primary pb-2">{title}</Title>
    <p
      class="text-Black text-left font-bold text-base leading-7 pb-2 tracking-[.27px]"
    >
      {subTitle}
    </p>
    <Paragraph>{body}</Paragraph>
  </div>
  <div class="w-full sm:w-1/3">
    <Image
      src={BottlesImage}
      alt={"Bottles"}
      quality={"low"}
      loading={"lazy"}
      format={"avif"}
      class={"w-full h-auto "}
    />
  </div>
</Container>
