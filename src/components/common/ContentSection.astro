---
import { Image } from "astro:assets";
import { getI18N } from "@i18n/index";
import Imagen from "@assets/images/bg_02@2x.webp";
import Title from "@components/Title.astro";
import Paragraph from "@components/Paragraph.astro";
import BottomContentSection from "./BottomContentSection.astro";
import Container from "@components/Container.astro";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { body, body2, title, bottomPart } = i18n.ContentSection.headSection;
---

<Container extraClases="bg-cardBackgroud rounded-xl p-6 my-16">
  <div class="flex flex-wrap bg-Light rounded-xl p-4">
    <div class="flex w-full md:w-2/3">
      <div class="flex flex-col">
        <Title clases="text-primary py-2">{title}</Title>
        <Paragraph clases="py-4">{body}</Paragraph>
        <Paragraph clases="py-4">{body2}</Paragraph>
        <div class="border-t border-gray-100 my-6"></div>
      </div>
    </div>
    <div class="w-full md:w-1/3">
      <Image
        alt={"Group of products"}
        src={Imagen}
        quality={"low"}
        format={"avif"}
        loading={"lazy"}
        class={"h-[392px] w-full"}
      />
    </div>
    <Title clases="text-Black pb-4">{bottomPart.title}</Title>
    <Paragraph>{bottomPart.body}</Paragraph>
  </div>
  <BottomContentSection />
</Container>
