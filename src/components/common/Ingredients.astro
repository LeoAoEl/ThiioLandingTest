---
import { getI18N } from "@i18n/index";
import { Image } from "astro:assets";
import Container from "@components/Container.astro";
import Bottles from "@assets/images/bottles@2x.webp";
import Title from "@components/Title.astro";
import Paragraph from "@components/Paragraph.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });

const { body, title } = i18n.Ingredients;
---

<Container extraClases="bg-cardBackgroud rounded-xl p-6 my-16">
  <div class="flex flex-col md:flex-row items-center">
    <div class="md:w-1/3">
      <Image
        alt={"Bottles Image"}
        src={Bottles}
        quality={"mid"}
        loading={"lazy"}
        format={"avif"}
        class={"w-full h-auto md:h-[387px] md:w-[359px] mb-4 md:mb-0 md:mr-8 rounded-xl  drop-shadow-2xl"}
      />
    </div>
    <div class="md:w-2/3 bg-Light rounded-xl p-8">
      <Title clases="text-primary">{title}</Title>
      <Paragraph>{body}</Paragraph>
    </div>
  </div>
</Container>
