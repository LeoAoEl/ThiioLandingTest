---
import { Image } from "astro:assets";
import { getI18N } from "@i18n/index";
import Image1 from "@assets/images/image_01@2x.webp";
import Image2 from "@assets/images/image_02@2x.webp";
import Image3 from "@assets/images/image_03@2x.webp";
import Image4 from "@assets/images/image_04@2x.webp";
import Container from "@components/Container.astro";
import Title from "@components/Title.astro";
import Paragraph from "@components/Paragraph.astro";
const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
const { title, body, body2, body3 } = i18n.FourPhotosSection;
---

<section
  class="bg-cardBackgroud flex-wrap flex flex-col place-content-center h-auto lg:h-[598px] py-6"
>
  <Container extraClases=" flex flex-col md:flex-row">
    <div class="md:w-1/2 items-center">
      <Title clases="text-Black">
        {title}
      </Title>
      <p
        class="py-4 text-primary text-left font-bold text-base tracking-[.24px] opacity-100 leading-7"
      >
        {body}
      </p>
      <Paragraph clases="py-4">
        {body2}
      </Paragraph>
      <Paragraph>
        {body3}
      </Paragraph>
    </div>
    <aside
      class="flex md:ml-4 md:w-1/2 mt-4 md:mt-0 place-content-center items-center"
    >
      <div class="grid grid-cols-2">
        <Image class={"w-[313px] h-[239px]"} src={Image1} alt={"Pills"} />
        <Image class={" w-[313px] h-[239px]"} src={Image2} alt={"Ginger"} />
        <Image
          class={" w-[313px] h-[239px]"}
          src={Image3}
          alt={"Taking Pills"}
        />
        <Image class={" w-[313px] h-[239px]"} src={Image4} alt={"Medicine"} />
      </div>
    </aside>
  </Container>
</section>
